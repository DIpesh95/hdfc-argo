    </select>
    <input type="number" name="filterValue" placeholder="Filter value">
    <button type="submit">Filter</button>
  </form>

  <ul>
    <% products.forEach(product => { %>
      <!-- Product cards here -->
    <% }); %>
  </ul>
  <a href="/logout">Logout</a>
</body>
</html>
